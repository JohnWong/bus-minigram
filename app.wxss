/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  background-color: #efeff4;
}

.route-info {
  font-size: 12px;
  color: #8e8e93;
  margin-top: 4px;
  display: flex;
}

.route-info view {
  margin-right: 8px;
}

.tabbar-item {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #929292;
  font-size: 10px;
}

.tabbar-item image {
  width: 20px;
  height: 20px;
  margin-bottom: 4px;
}